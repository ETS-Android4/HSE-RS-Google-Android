<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task4" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="actionBarSize">2sp</item>
        <item name="android:background">#FBC215</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="style_other" parent="@android:style/TextAppearance">
        <item name="android:textColor">#A65050</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="style_other.bigfont">
        <item name="android:textSize">50sp
        </item>
    </style>
</resources>